@page
@model SWP391_Gr3.Pages.Promotions.IndexModel
@{
    ViewData["Title"] = "Khuyến mãi hiện có";
}

<h2 class="text-2xl font-bold mb-4">🎁 Danh sách khuyến mãi</h2>

@if (Model.Promotions.Count == 0)
{
    <p>Hiện không có khuyến mãi nào đang diễn ra.</p>
}
else
{
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        @foreach (var promo in Model.Promotions)
        {
            <div class="border border-gray-300 p-4 rounded shadow hover:shadow-md transition duration-200">
                <h3 class="text-lg font-semibold text-blue-700">@promo.Code</h3>
                <p class="text-sm text-gray-600 italic">@promo.PromotionType?.Title</p>
                <p><strong>Giá trị:</strong> @promo.Value</p>
                <p>
                    <strong>Thời gian:</strong>
                    @promo.StartDate?.ToString("dd/MM/yyyy") - @promo.EndDate?.ToString("dd/MM/yyyy")
                </p>
                <p><strong>Số lượng còn lại:</strong> @(promo.Stock ?? 0)</p>
            </div>
        }
    </div>
}
