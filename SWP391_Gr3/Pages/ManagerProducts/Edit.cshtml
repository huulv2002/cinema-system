@page
@model SWP391_Gr3.Pages.ManagerProducts.EditModel
@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
}

<h2>Chỉnh sửa sản phẩm</h2>

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Product.Id" />

    <div class="mb-3">
        <label asp-for="Product.Name" class="form-label"></label>
        <input asp-for="Product.Name" class="form-control" />
        <span asp-validation-for="Product.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Product.Size" class="form-label"></label>
        <input asp-for="Product.Size" class="form-control" />
        <span asp-validation-for="Product.Size" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Product.Price" class="form-label"></label>
        <input asp-for="Product.Price" class="form-control" />
        <span asp-validation-for="Product.Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Product.Stock" class="form-label"></label>
        <input asp-for="Product.Stock" class="form-control" />
        <span asp-validation-for="Product.Stock" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Product.Description" class="form-label"></label>
        <textarea asp-for="Product.Description" class="form-control"></textarea>
        <span asp-validation-for="Product.Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Product.ProductCategoryId" class="form-label">Danh mục</label>
        <select asp-for="Product.ProductCategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))" class="form-select">
            <option value="">-- Chọn danh mục --</option>
        </select>
        <span asp-validation-for="Product.ProductCategoryId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Ảnh hiện tại:</label><br />
        @if (!string.IsNullOrEmpty(Model.Product.ImageUrl))
        {
            <img src="@Model.Product.ImageUrl" style="height: 100px;" />
        }
        else
        {
            <span>Không có ảnh</span>
        }
    </div>

    <div class="mb-3">
        <label class="form-label">Ảnh mới (nếu muốn thay)</label>
        <input type="file" asp-for="ImageFile" accept="image/*" class="form-control" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a asp-page="Index" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}