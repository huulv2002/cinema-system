@page "/"
@model SWP391_Gr3.Pages.Home.IndexModel
@{
    ViewData["Title"] = "Trang chủ";
}
<div class="hero-section">
    <div class="overlay"></div>
    <div class="hero-content text-center">
        <h2 class="display-4 text-white fw-bold">Chào mừng đến với OMTB</h2>
        <!-- Movie Carousel Section -->
        <section class="movie-list py-5">
            <div class="container">
                @if (Model.Movies != null && Model.Movies.Any())
                {
                    <div id="movieCarousel" class="carousel slide" data-bs-ride="carousel">
                        <!-- Carousel Indicators (optional) -->
                        <div class="carousel-indicators">
                            @for (int i = 0; i < Model.Movies.Count; i++)
                            {
                                <button type="button" data-bs-target="#movieCarousel" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "false")" aria-label="Slide @(i + 1)"></button>
                            }
                        </div>

                        <!-- Carousel Items -->
                        <div class="carousel-inner">
                            @for (int i = 0; i < Model.Movies.Count; i += 4)
                            {
                                var moviesInSlide = Model.Movies.Skip(i).Take(4).ToList();
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <div class="row">
                                        @foreach (var movie in moviesInSlide)
                                        {
                                            <div class="col-md-3 mb-4">
                                                <div class="card h-100 shadow-sm">
                                                    @if (movie.Images != null && movie.Images.Any())
                                                    {
                                                        <img src="@movie.Images.First().Url" class="card-img-top" alt="@movie.Title" style="height: 300px; object-fit: cover;">
                                                    }
                                                    else
                                                    {
                                                        <img src="https://via.placeholder.com/200x300" class="card-img-top" alt="No image available" style="height: 300px; object-fit: cover;">
                                                    }
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Carousel Controls -->
                        <button class="carousel-control-prev" type="button" data-bs-target="#movieCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#movieCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                }
                else
                {
                    <p class="text-center">Không có phim nào để hiển thị.</p>
                }
            </div>
        </section>
        <p class="lead text-white">Khám phá những bộ phim mới nhất</p>
        <a href="/Movies/index" class="btn btn-warning btn-lg shadow mt-3">Xem</a>
    </div>
</div>

<style>
    .hero-section {
        position: relative;
        background: url('https://learnenglishteens.britishcouncil.org/sites/teens/files/styles/section_block_landing_image/public/field/image/RS9247_GettyImages-1334662982-hig.jpg?itok=nO7pZDv9') center/cover no-repeat;
        min-height: 400px;
        height: auto;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        color: white;
        padding: 20px;
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
    }

    .hero-content {
        position: relative;
        z-index: 1;
        max-width: 90%;
    }

        .hero-content h2 {
            font-size: calc(1.5rem + 2vw);
            margin-bottom: 1rem;
        }

        .hero-content p.lead {
            font-size: calc(1rem + 1vw);
        }

    .btn-warning {
        transition: transform 0.3s ease-in-out;
    }

        .btn-warning:hover {
            background-color: #ffcc00;
            transform: scale(1.05);
        }

    /* Carousel Styling */
    .carousel-control-prev, .carousel-control-next {
        width: 5%;
    }

    .carousel-control-prev-icon, .carousel-control-next-icon {
        background-color: rgba(0, 0, 0, 0.5);
        border-radius: 50%;
        padding: 20px;
    }

    .carousel-indicators {
        bottom: -50px;
    }

        .carousel-indicators button {
            background-color: #888;
            border-radius: 50%;
            width: 10px;
            height: 10px;
            margin: 0 5px;
        }

        .carousel-indicators .active {
            background-color: #ffcc00;
        }

    @@media (max-width: 768px) {
        .hero-section {
            min-height: 300px;
            padding: 15px;
        }

        .hero-content h2 {
            font-size: calc(1.2rem + 1.5vw);
        }

        .hero-content p.lead {
            font-size: calc(0.9rem + 0.8vw);
        }
    }

    @@media (max-width: 576px) {
        .hero-section {
            min-height: 250px;
        }
    }
</style>