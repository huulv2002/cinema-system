@page
@model SWP391_Gr3.Pages.Home.ContactModel
@{
    ViewData["Title"] = "Liên hệ";
}

<div class="container mt-5 contact-container">
    <h2 class="text-center mb-4">Liên hệ với chúng tôi</h2>
    <div class="row">
     
        <div class="col-md-6 mb-4">
            <div class="card p-4 shadow-sm">
                <h4 class="card-title mb-3">Gửi tin nhắn</h4>
                <form method="post">
                    <div class="form-group mb-3">
                        <label for="fullName" class="form-label">Họ và tên</label>
                        <input type="text" id="fullName" name="fullName" class="form-control" placeholder="Nhập họ và tên" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Nhập email" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="phone" class="form-label">Số điện thoại</label>
                        <input type="tel" id="phone" name="phone" class="form-control" placeholder="Nhập số điện thoại" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="message" class="form-label">Tin nhắn</label>
                        <textarea id="message" name="message" class="form-control" rows="5" placeholder="Nhập tin nhắn của bạn" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Gửi</button>
                </form>
            </div>
        </div>
        <!-- google map-->
        <div class="col-md-6 mb-4">
            <div class="card p-4 shadow-sm">
                <h4 class="card-title mb-3">Thông tin liên hệ</h4>
                <ul class="list-unstyled">
                    <li class="mb-2"><i class="fa fa-map-marker me-2"></i> Khu Công nghệ cao Hòa Lạc, Km29 Đại lộ Thăng Long, huyện Thạch Thất, Hà Nội, Việt Nam</li>
                    <li class="mb-2"><i class="fa fa-phone me-2"></i> (+84) 123 456 JQK</li>
                    <li class="mb-2"><i class="fa fa-envelope me-2"></i> daihocfbt@edu.vn</li>
                    <li><i class="fa fa-clock-o me-2"></i> Thứ 2 - Chủ nhật: 8:00 - 22:00</li>
                </ul>
                <div class="map-container mt-4">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3370.5691217968565!2d105.5280576747138!3d21.008660488469662!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3135ab5f41e95f55%3A0xcfc029607e11a4fe!2sHoa%20Lac%20High-tech%20Park!5e1!3m2!1sen!2s!4v1750773978659!5m2!1sen!2s" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade">
                            width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/Contactcshtml.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha512-SfTiTlX6kk+qitfevl/7LibUOeJWlt9rbyDn92a1DqWOw9vWG2MFoays0sgObmWazO5BQPiFucnnEAjpAB+/Sw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
}

