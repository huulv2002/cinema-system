@page
@model SWP391_Gr3.Pages.ManagerRoom.RoomManageModel
@{
	ViewData["Title"] = "Quản lý phòng";
}

<div class="form-container">
	<h2 style="color:red">Quản lý phòng phim - rạp: @Model.TheaterName</h2>
	<h3 style="color:white">Danh sách phòng</h3>
	<a asp-page="/ManagerRoom/CreateRoom" asp-route-Id="@Model.TheaterId" class="btn btn-warning">Tạo mới</a>

	@if (Model.Rooms.Any())
	{
		<table>
			<thead>
				<tr>
					<th>Room Code</th>
					<th>Theater</th>
					<th>Thao tác</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var room in Model.Rooms)
				{
					<tr>
						<td>@room.Code</td>
						<td>@room.Theater.Name</td>
						<td>
							<a asp-page="/ManagerRoom/DeleteRoom" asp-route-id="@room.Id"class="btn btn-danger btn-sm">Xóa</a>
							<a asp-page="/ManagerRoom/EditRoom" asp-route-id="@room.Id" class="btn btn-primary btn-sm">Sửa</a>
							<a asp-page="/ManagerRoom/DetailRoom" asp-route-id="@room.Id" class="btn btn-primary btn-sm">Chi tiết</a>

						</td>
					</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<h2 class="empty-message">Không có phòng nào</h2>
	}

	<br />
	<a asp-page="/Theaters/Index" class="btn btn-warning">Quay lại</a>
	<br />
</div>

@section Styles {
	<link rel="stylesheet" href="~/css/room-manage.css" asp-append-version="true" />
}
