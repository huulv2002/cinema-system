@page "{id:int}"
@model SWP391_Gr3.Pages.ManagerMovie.DeleteMovieModel
@{
    ViewData["Title"] = "Xác nhận xoá phim";
}
<h2>Xác nhận xoá phim</h2>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}
else if (Model.Movie != null)
{
    <div class="alert alert-warning">
        Bạn có chắc chắn muốn xoá phim <strong>@Model.Movie.Title</strong>?
    </div>

    <form method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Xoá</button>
        <a asp-page="/ManagerMovie/Index" class="btn btn-secondary">Huỷ</a>
    </form>
}
else
{
    <div class="alert alert-info">Không tìm thấy phim.</div>
}
