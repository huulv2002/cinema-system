@page
@model SWP391_Gr3.Pages.ManagerMovie.AddMovieModel
@{
    ViewData["Title"] = "Thêm phim";
}

<div class="container mt-5">
    <h2 class="mb-4">Thêm phim mới</h2>

    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label">Tiêu đề</label>
            <input asp-for="Movie.Title" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Mô tả</label>
            <textarea asp-for="Movie.Description" class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Tuổi giới hạn</label>
            <input asp-for="Movie.OverAge" type="number" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Đạo diễn</label>
            <input asp-for="Movie.Director" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Diễn viên</label>
            <input asp-for="Movie.Performer" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Thời lượng (phút)</label>
            <input asp-for="Movie.Duration" type="number" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Ngôn ngữ</label>
            <input asp-for="Movie.Language" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Ngày phát hành</label>
            <input asp-for="Movie.ReleaseDate" type="date" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Ảnh phim</label>
            <input type="file" name="UploadedImage" class="form-control" accept=".jpg,.jpeg,.png" required />
        </div>

        <button type="submit" class="btn btn-primary">Lưu phim</button>
        <a asp-page="Index" class="btn btn-secondary">Huỷ</a>
    </form>
</div>
