@page
@model SWP391_Gr3.Pages.Users.ChangePasswordModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<style>
    .change-password-container {
        max-width: 400px;
        margin: auto;
        margin-top: 50px;
        background: rgba(255, 255, 255, 0.9);
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

        .change-password-container input:focus {
            border-color: #4a90e2;
            box-shadow: 0 0 8px rgba(74, 144, 226, 0.8);
        }

    .btn-change {
        background-color: #4a90e2;
        border: none;
    }

        .btn-change:hover {
            background-color: #357ABD;
        }
</style>

<div class="change-password-container">
    <h2 class="text-center text-primary">Đổi mật khẩu</h2>

    @if (Model.ErrorMessage != null)
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }
    @if (Model.SuccessMessage != null)
    {
        <div class="alert alert-success">@Model.SuccessMessage</div>
    }

    <form method="post" novalidate>
        <div class="form-group">
            <label for="Email">📧 Email</label>
            <input asp-for="Email" type="email" class="form-control" required placeholder="Nhập email của bạn" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label for="CurrentPassword">🔑 Mật khẩu hiện tại</label>
            <input asp-for="CurrentPassword" type="password" class="form-control" required placeholder="Nhập mật khẩu hiện tại" />
            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label for="NewPassword">🆕 Mật khẩu mới</label>
            <input asp-for="NewPassword" type="password" class="form-control" required placeholder="Nhập mật khẩu mới" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label for="ConfirmPassword">✅ Xác nhận mật khẩu mới</label>
            <input asp-for="ConfirmPassword" type="password" class="form-control" required placeholder="Xác nhận mật khẩu mới" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary btn-block mt-4 btn-change">Đổi mật khẩu</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
