@page
@model SWP391_Gr3.Pages.Users.LoginModel
@{
	ViewData["Title"] = "Đăng nhập";
}

<div class="login-container">
    <h2 class="text-center text-danger">Đăng nhập</h2>
    @if (Model.ErrorMessage != null)
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }
    <form method="post">
        <div class="form-group">
            <label for="email">📧 Email</label>
            <input asp-for="Email" class="form-control" required placeholder="Nhập email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label for="password">🔑 Mật khẩu</label>
            <input type="password" asp-for="Password" class="form-control" required placeholder="Nhập mật khẩu" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-danger btn-block mt-4 btn-login">🔓 Đăng nhập</button>
    </form>
    <p class="mt-3 text-center">
        Bạn chưa có tài khoản? <a asp-page="./Register" class="text-danger">Đăng ký ngay</a>
    </p>
    <p class="mt-2 text-center">
        <a asp-page="/Users/ForgotPassword" class="text-secondary">❓ Quên mật khẩu</a> |
        <a asp-page="/Users/ChangePassword" class="text-secondary">🔐 Đổi mật khẩu</a>
    </p>
</div>
@section Styles {
    <link rel="stylesheet" href="~/css/user_login.css" asp-append-version="true" />
}