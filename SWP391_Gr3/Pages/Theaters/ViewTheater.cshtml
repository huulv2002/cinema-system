@page
@model SWP391_Gr3.Pages.Theaters.ViewTheaterModel
@{
    ViewData["Title"] = "Danh sách rạp";
}

<div class="manage-theaters-container">
    <h2>Danh sách rạp</h2>

    @if (Model.Theaters == null || Model.Theaters.Count == 0)
    {
        <p>Không có rạp nào để hiển thị.</p>
    }
    else
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Tên rạp</th>
                    <th>Vị trí</th>
                    @if (Model.UserRole == "Admin" || Model.UserRole == "Owner")
                    {
                        <th>Trạng thái</th>
                    }
                    @if (Model.UserRole == "Customer" || Model.UserRole == null)
                    {
                        <th>Hành động</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var theater in Model.Theaters)
                {
                    <tr>
                        <td>@theater.Name</td>
                        <td>@theater.Location</td>
                        @if (Model.UserRole == "Admin" || Model.UserRole == "Owner")
                        {
                            <td>@(theater.IsActive == true ? "Hoạt động" : "Không hoạt động")</td>
                        }
                        @if (Model.UserRole == "Customer" || Model.UserRole == null)
                        {
                            <td>
                                <a href="/Theaters/Room?theaterId=@theater.Id" class="btn btn-primary">Chọn rạp</a>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<style>
    .manage-theaters-container {
        max-width: 1200px;
        margin: 50px auto;
        padding: 30px;
        background: #343a40;
        color: white;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    .table {
        color: white;
        background-color: #495057;
    }

        .table th, .table td {
            border-color: #6c757d;
        }

        .table thead th {
            background-color: #212529;
            color: white;
        }

    label {
        color: white;
    }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
        color: white;
    }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
        color: black;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        color: white;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        color: white;
    }
</style>
